{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "ev-region22-blocks/card-link",
  "version": "0.1.0",
  "title": "Box mit Link",
  "category": "text",
  "icon": "embed-generic",
  "description": "TODO",
  "supports": {
    "html": false,
    "color": {
      "text": false,
      "background": true,
      "link": false
    },
    "border": true
  },
  "textdomain": "card-link",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "linkUrl": {
      "type": "string"
    },
    "imageUrl": {
      "type": "string"
    },
    "focalPointValueX": {
      "type": "number"
    },
    "focalPointValueY": {
      "type": "number"
    },
    "linkTarget": {
      "type": "string"
    },
    "linkRel": {
      "type": "string"
    },
    "style": {
      "type": "object",
      "default": {
        "color": {
          "background": "var(--wp--preset--color--quaternary)"
        },
        "border": {
          "radius": "0.25rem"
        },
        "spacing": {
          "padding": {
            "top": "0rem",
            "bottom": "1rem"
          }
        }
      }
    }
  }
}